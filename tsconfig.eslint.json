{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "bun", "@total-typescript/ts-reset", "@cloudflare/workers-types"]
  },
  "include": [
    "client/src/**/*",
    "server/**/*.ts",
    "cf-worker/src/**/*",
    "components/**/*.tsx",
    "components/**/*.ts",
    "shared/**/*.ts",
    "reset.d.ts",
    "*.ts",
    "*.tsx"
  ],
  "exclude": ["node_modules", "dist", "build", "drizzle"]
}
