{
  "name": "hackerfolio-tulio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "bun --hot server/app.ts",
    "dev:client": "vite",
    "dev": "concurrently -k -n server,client -c green,cyan \"bun run dev:server\" \"bun run dev:client\"",
    "build": "vite build && vite build --ssr src/entry-server.tsx --outDir ../dist/server",
    "start": "bun server/app.ts",
    "check:types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "bun server/db/migrate.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@tabler/icons-react": "^3.34.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotted-map": "^2.2.3",
    "elysia": "^1.3.15",
    "lucide-react": "^0.540.0",
    "motion": "^12.23.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@tanstack/react-router": "^1.131.27",
    "tailwind-merge": "^3.3.1",
    "drizzle-orm": "^0.44.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@types/react": "~19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
